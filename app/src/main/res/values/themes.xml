<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ══════════════════════════════════════════════════════════════
         TAKWA FORTRESS — Base Theme (Soft Dark)
         ══════════════════════════════════════════════════════════════ -->
    <style name="Theme.TaqwaFortress" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary = soft blue -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Window chrome matches the dark bg -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Radio buttons / checkboxes use blue accent -->
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue_dim</item>

        <!-- Progress bars -->
        <item name="android:progressTint">@color/blue</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <!-- Splash — uses primary dark nav/status so it blends -->
    <style name="Theme.TaqwaFortress.Splash" parent="Theme.TaqwaFortress">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>