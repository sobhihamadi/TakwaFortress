<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Settings &amp; Diagnostics"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- User Info Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ USER INFORMATION"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/userEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: user@example.com"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/licenseKeyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License: TAQWA-XXXX-XXXX-XXXX"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/licenseStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: ACTIVE"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Device Info Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± DEVICE INFORMATION"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/deviceManufacturerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer: Samsung"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/deviceModelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model: Galaxy A24"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/androidVersionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android: 14"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hardwareIdText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HWID: abc123..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/copyHwidButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Copy"
                    android:textSize="12sp"
                    android:background="@drawable/bg_button_secondary"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Protection Status Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ PROTECTION STATUS"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/protectionScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protection Score: 100/100"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/deviceOwnerStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Device Owner"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dnsFilterStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… DNS Filter"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/chromeStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Chrome Managed"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/webViewStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… WebView Killer"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/safeModeStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›¡ï¸ Safe Mode: Protected"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/frpStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Factory Reset Protection"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/timeProtectionStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Time Protection"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/monitoringStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… App Monitoring"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Diagnostic Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”§ DIAGNOSTICS"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/testDnsButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Test DNS Filter"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/verifyChromeButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Verify Chrome Config"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/exportReportButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Export Diagnostic Report"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_secondary" />

    </LinearLayout>
</ScrollView>