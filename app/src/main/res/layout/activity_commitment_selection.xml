<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ============================================================ -->
    <!-- PLAN SELECTION SCREEN                                        -->
    <!-- ============================================================ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161B27"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- â”€â”€ Header â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAKWA FORTRESS"
                android:textColor="#7A8BA0"
                android:textSize="10sp"
                android:letterSpacing="0.25"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›¡ï¸ Choose Your Plan"
                android:textColor="#EFF3F8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a plan to activate Taqwa Fortress"
                android:textColor="#7A8BA0"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp" />

            <!-- â”€â”€ Radio Group â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <RadioGroup
                android:id="@+id/planRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <RadioButton
                    android:id="@+id/planTrialRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3-Day Free Trial â€” FREE"
                    android:textColor="#EFF3F8"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radio_button"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="#5DB88A" />

                <RadioButton
                    android:id="@+id/planMonthlyRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Month â€” $3.90"
                    android:textColor="#EFF3F8"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radio_button"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="#5DB88A" />

                <RadioButton
                    android:id="@+id/planQuarterlyRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Months â€” $9.90"
                    android:textColor="#EFF3F8"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radio_button"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="#5DB88A" />

                <RadioButton
                    android:id="@+id/planBiannualRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 Months â€” $15.90"
                    android:textColor="#EFF3F8"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radio_button"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="#5DB88A" />

                <RadioButton
                    android:id="@+id/planAnnualRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Year â€” $24.90"
                    android:textColor="#EFF3F8"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_radio_button"
                    android:buttonTint="#5DB88A" />

            </RadioGroup>

            <!-- â”€â”€ Plan Details Card â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“  PLAN DETAILS"
                    android:textColor="#7A8BA0"
                    android:textSize="10sp"
                    android:letterSpacing="0.12"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/planDetailsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a plan to see details"
                    android:textColor="#D4DCE8"
                    android:textSize="14sp"
                    android:lineSpacingExtra="5dp" />

            </LinearLayout>

            <!-- â”€â”€ Primary Button â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <Button
                android:id="@+id/activateButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Select a Plan"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="14dp" />

            <!-- â”€â”€ Progress Bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#4A90D9"
                android:layout_marginBottom="8dp" />

            <!-- â”€â”€ Status Text â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your plan"
                android:textColor="#7A8BA0"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ============================================================ -->
    <!-- WHOP CHECKOUT WEBVIEW OVERLAY                                -->
    <!-- ============================================================ -->
    <LinearLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#161B27"
        android:visibility="gone">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#1E2535"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <Button
                android:id="@+id/btnCloseWebView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ•  Cancel"
                android:textColor="#E05C5C"
                android:textSize="13sp"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Secure Checkout"
                android:textColor="#EFF3F8"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Balance spacer -->
            <View
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- 1dp divider under top bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#252E3F" />

        <WebView
            android:id="@+id/checkoutWebView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>