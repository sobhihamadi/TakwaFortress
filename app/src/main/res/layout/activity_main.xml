<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161B27">

    <!-- Top glow accent -->
    <View
        android:id="@+id/topGlow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/glow_circle"
        android:alpha="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_fortress_logo"
        android:contentDescription="Taqwa Fortress Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp" />

    <!-- App label -->
    <TextView
        android:id="@+id/appLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKWA FORTRESS"
        android:textColor="#7A8BA0"
        android:textSize="11sp"
        android:letterSpacing="0.25"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- App name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Steel Fortress\nfor Mental Freedom"
        android:textColor="#EFF3F8"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:letterSpacing="0.01"
        app:layout_constraintTop_toBottomOf="@id/appLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Thin divider line -->
    <View
        android:id="@+id/divider"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="#2A3347"
        app:layout_constraintTop_toBottomOf="@id/appNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Loading spinner -->
    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:indeterminateTint="#4A90D9"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textColor="#7A8BA0"
        android:textSize="12sp"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/loadingProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>