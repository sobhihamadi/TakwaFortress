<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Loading state â€” shown while FortressClearService runs -->
    <LinearLayout
        android:id="@+id/loadingGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#4CAF50"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Releasing device restrictions..."
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- Main content â€” shown after clearing is done -->
    <ScrollView
        android:id="@+id/contentGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="64sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commitment Complete!"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congratulations! You completed your commitment. Your device is now fully unlocked."
                android:textColor="#B0B0B0"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"/>

            <!-- Stats card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvDaysCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days completed: â€”"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvPlanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan: â€”"
                    android:textColor="#B0B0B0"
                    android:textSize="14sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue Another Round"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnViewDashboard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="View Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/bg_card"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>