<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             REGISTRATION FORM GROUP
             Hidden when verification email has been sent.
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/registrationFormGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Create Account"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join thousands in taking back control"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginBottom="32dp" />

            <!-- Google Sign-In Button -->
            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue with Google"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_secondary"
                android:drawableLeft="@drawable/ic_google"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â”€â”€â”€â”€â”€ OR â”€â”€â”€â”€â”€"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Email Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input"
                android:hint="your@email.com"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input"
                android:hint="Min. 6 characters"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Confirm Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input"
                android:hint="Re-enter password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Terms Checkbox -->
            <CheckBox
                android:id="@+id/cbAgreeTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I agree to Terms &amp; Privacy Policy"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:buttonTint="#4CAF50"
                android:layout_marginBottom="24dp" />

            <!-- Create Account Button -->
            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_primary"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#4CAF50"
                android:layout_marginBottom="16dp" />

            <!-- Login Link -->
            <TextView
                android:id="@+id/btnLoginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:padding="8dp" />

        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
             EMAIL VERIFICATION WAITING PANEL
             Shown after the verification email is sent.
             Hidden by default.
             â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/emailVerificationGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="48dp"
            android:visibility="gone">

            <!-- Email icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§"
                android:textSize="72sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Your Email"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Dynamic message â€” set by RegistrationActivity with the user's email -->
            <TextView
                android:id="@+id/tvVerificationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="36dp" />

            <!-- Primary CTA -->
            <Button
                android:id="@+id/btnIveVerified"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœ…  I've Verified My Email"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="12dp" />

            <!-- Resend -->
            <Button
                android:id="@+id/btnResendEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Resend Verification Email"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="#2A2A4A"
                android:layout_marginBottom="12dp" />

            <!-- Back to form -->
            <Button
                android:id="@+id/btnBackToRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="â† Back to Registration"
                android:textColor="#9E9E9E"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>