<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Lock Screen Policy -->
        <force-lock />

        <!-- Password Policies -->
        <limit-password />
        <reset-password />
        <watch-login />

        <!-- Storage Encryption -->
        <encrypted-storage />

        <!-- Wipe Data (Factory Reset) -->
        <wipe-data />

        <!-- Set Global Proxy -->
        <set-global-proxy />

        <!-- Disable Camera -->
        <disable-camera />

        <!-- Disable Keyguard Features -->
        <disable-keyguard-features />
    </uses-policies>
</device-admin>